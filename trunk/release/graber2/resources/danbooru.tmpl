*preinstalled=0

;template of danbooru engine

[main]
$picture.fields(url,preview,width:i,height:i,rating,id:i,author,score:i,posted:d,md5,source,sample_url);
$pictime = '@vartime("en-US",#created_at,"ddd mmm dd hh:nn:ss xxxxx yyyy")'; 
$picurl = '$picture%url';

[listscript]
$thread.url = "$main.url+'post/index.xml?limit=100&tags='+@httpencode($tag)";
$thread.xml = 'firstpagexml';
$thread.execute();
$thread.counter = 2;
$thread.xml = 'listxml';
$thread.url = "$main.url+'post/index.xml?limit=100&tags='+@httpencode($tag)+'&page='+$thread.counter";

[dwscript]
$thread.url = @calc($picurl);

[firstpagexml]
^posts{
	$thread.count=#count/100+1;
	$thread.result=#count;
	^post{
		addpicture(
			%url=#file_url,
			%preview=#preview_url,
			%width=#width,
			%height=#height,
			%rating=#rating,
			%id=#id,
			%author=#author,
			%score=#score,
			%posted=@calc($pictime),
			%md5=#md5,
			%source=#source,
			%sample_url=#sample_url,
			%tags=csv(#tags," ")
		);
		$picture.filename = @emptyname(#file_url);
	}
}

[listxml]
^posts{
	^post{
		addpicture(
			%url=#file_url,
			%preview=#preview_url,
			%width=#width,
			%height=#height,
			%rating=#rating,
			%id=#id,
			%author=#author,
			%score=#score,
			%posted=@calc($pictime),
			%md5=#md5,
			%source=#source,
			%sample_url=#sample_url,
			%tags=csv(#tags," ")
		);
		$picture.filename = @emptyname(#file_url);
	}
}